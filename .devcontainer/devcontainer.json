{
  "name": "LEAG Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",

  // Features to install in the dev container
  "features": {
    // Docker-in-Docker for running docker-compose
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    // Node.js 20 LTS
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true
    },
    // Python 3.11
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    // GitHub CLI
    "ghcr.io/devcontainers/features/github-cli:1": {},
    // Common utilities
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    }
  },

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        // JavaScript/TypeScript
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        // Django/Wagtail
        "batisteo.vscode-django",
        // Docker
        "ms-azuretools.vscode-docker",
        // Git
        "eamodio.gitlens",
        "mhutchie.git-graph",
        // Database
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        // General
        "editorconfig.editorconfig",
        "yzhang.markdown-all-in-one",
        // Claude Code (if available as extension)
        "anthropic.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[python]": {
          "editor.defaultFormatter": "ms-python.python"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/node_modules": true
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },

  // Ports to forward
  "forwardPorts": [3000, 8000, 5432, 8025],
  "portsAttributes": {
    "3000": { "label": "Next.js Frontend", "onAutoForward": "notify" },
    "8000": { "label": "Django Backend", "onAutoForward": "notify" },
    "5432": { "label": "PostgreSQL", "onAutoForward": "silent" },
    "8025": { "label": "MailHog UI", "onAutoForward": "silent" }
  },

  // Lifecycle scripts
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "echo 'ðŸš€ LEAG dev environment ready! Run: make up'",

  // Environment variables
  "containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  },

  // Run as non-root user
  "remoteUser": "vscode"
}
