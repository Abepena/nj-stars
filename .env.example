# =============================================================================
# NJ Stars Elite - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# For full documentation, see: documentation/ENV_VARS.md
# =============================================================================

# === Database (PostgreSQL) ===
POSTGRES_USER=njstars
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=njstars

# === Django Backend ===
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
DEBUG=True

# === Stripe Payments ===
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === NextAuth / Frontend Authentication ===
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# === Google OAuth (Optional) ===
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# === Google Maps (Optional) ===
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# === Google Sheets Export (Optional) ===
# Store service account JSON in: backend/google-credentials.json
GOOGLE_SHEETS_ENABLED=true
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/export/google-sheets/callback/

# === Facebook OAuth (Optional) ===
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# === Instagram Integration (Optional) ===
# Leave empty to use mock data in development
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=
META_APP_ID=
META_APP_SECRET=

# === Printify POD Integration (Optional) ===
PRINTIFY_API_KEY=
PRINTIFY_SHOP_ID=
PRINTIFY_WEBHOOK_SECRET=

# === Email (Optional) ===
# Local dev uses MailHog (no config needed)
# For production, set SendGrid API key
SENDGRID_API_KEY=

# === Vercel AI (Optional) ===
VERCEL_AI_API_KEY=
