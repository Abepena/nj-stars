# =============================================================================
# Backend Environment Variables (Reference Only)
# =============================================================================
# For local Docker development, use the root .env file instead.
# This file is kept as a reference for backend-specific variables.
#
# Full documentation: documentation/ENV_VARS.md
# =============================================================================

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-python-secrets
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (set in root .env for Docker)
DB_NAME=njstars
DB_USER=njstars
DB_PASSWORD=njstars_dev_password
DB_HOST=postgres
DB_PORT=5432

# Stripe Payments
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Sheets Export
# Store credentials in: backend/google-credentials.json
GOOGLE_SHEETS_ENABLED=true
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/export/google-sheets/callback/

# Print-on-Demand (Printify)
PRINTIFY_API_KEY=
PRINTIFY_SHOP_ID=
PRINTIFY_WEBHOOK_SECRET=

# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=
META_APP_ID=
META_APP_SECRET=

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
APPLE_CLIENT_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# CORS & Frontend
CORS_ALLOWED_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Cloud Storage - Cloudinary (Production only)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
